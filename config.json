{
    "name": "STS",
    "n_gpu": 1,

    "arch": {
        "type": "STSModel",
        "args": {"plm_name": "klue/roberta-small"}
    },
    "data_module": {
        "type": "DataModule",
        "args":{
            "plm_name": "klue/roberta-small",
            "dataset_name": "STSDataset",
            "batch_size": 32,
            "shuffle": true,
            "train_path": "./data/train.csv",
            "dev_path": "./data/dev.csv",
            "test_path": "./data/dev.csv",
            "predict_path": "./data/test.csv",
            "max_length": 160,
            "col_info": {
                "label": "label",
                "input": ["sentence_1", "sentence_2"]
            }
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "l1_loss",
    "metrics": [
        "pearson"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "mode": "max",
        "early_stop": 10,

        "tensorboard": true
    },
    "wandb": {
        "project_name": "test",
        "run_name": "test"
    }
}
